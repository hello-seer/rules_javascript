load("@better_rules_javascript//javascript:rules.bzl", "js_library")
load("@better_rules_javascript//nodejs:rules.bzl", "nodejs_binary")

genrule(
    name = "generated",
    srcs = [],
    outs = ["script.js"],
    cmd = "echo \"console.log('Here')\" > \"$@\"",
)

js_library(
    name = "lib",
    srcs = glob(["**/*.js"]) + [":generated"],
    import_name = "foo",
)

nodejs_binary(
    name = "bin",
    dep = ":lib",
    main = "example",
)
