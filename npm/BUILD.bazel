load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("//nodejs:rules.bzl", "nodejs_binary")

package(default_visibility = ["//visibility:public"])

exports_files(glob(["**/*.bzl"]))

bzl_library(
    name = "bzl",
    srcs = glob(["**/*.bzl"]),
    deps = [
        "//util:bzl",
    ],
)

nodejs_binary(
    name = "yarn",
    dep = "@better_rules_javascript_npm//yarn:lib",
    main = "bin/yarn.js",
)
