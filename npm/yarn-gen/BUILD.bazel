load("@better_rules_typescript//typescript:rules.bzl", "ts_library")
load("//commonjs:rules.bzl", "cjs_root")
load("//nodejs:rules.bzl", "nodejs_binary")

cjs_root(
    name = "root",
    package_name = "@better_rules_javascript/yarn-gen",
    descriptors = ["package.json"],
)

ts_library(
    name = "lib",
    srcs = glob(["src/**/*.ts"]),
    compiler = "//rules:tsc",
    global_deps = [
        "@better_rules_javascript_npm//types_node:lib",
    ],
    root = ":root",
    strip_prefix = "better_rules_javascript/npm/yarn-gen/src",
    deps = [
        "@better_rules_javascript_npm//argparse:lib",
        "@better_rules_javascript_npm//types_argparse:lib",
        "@better_rules_javascript_npm//types_yaml:lib",
        "@better_rules_javascript_npm//types_yarnpkg__lockfile:lib",
        "@better_rules_javascript_npm//yaml:lib",
        "@better_rules_javascript_npm//yarnpkg_lockfile:lib",
    ],
)

nodejs_binary(
    name = "bin",
    data = [
        "//npm:yarn",
        "//npm:yarn2",
    ],
    dep = ":lib",
    env = {
        "_YARN_BIN": "better_rules_javascript/npm/yarn/bin",
        "_YARN2_BIN": "better_rules_javascript/npm/yarn2/bin",
    },
    main = "index.js",
)
