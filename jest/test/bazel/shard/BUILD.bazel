load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_file", "js_library")
load("@better_rules_javascript//jest:rules.bzl", "jest_test")

cjs_root(
    name = "root",
    package_name = "@better_rules_javascript_test/jest-basic",
)

js_library(
    name = "lib",
    srcs = ["example.js"],
    root = ":root",
)

js_library(
    name = "test_lib",
    srcs = glob(["*.spec.js"]),
    root = ":root",
    deps = [":lib"],
)

js_file(
    name = "jest_config",
    src = "jest.config.js",
    root = ":root",
)

jest_test(
    name = "test",
    config = ":jest_config",
    global_deps = [
        "@better_rules_javascript_npm_source_map_support0.5.21//:lib",
        "@better_rules_javascript_npm_babel_helper_compilation_targets7.16.3//:lib",
        "@better_rules_javascript_npm//jest-junit:lib",
    ],
    jest = "@better_rules_javascript_npm//jest:lib",
    jest_haste_map = "@better_rules_javascript_npm//jest-haste-map:lib",
    shard_count = 2,
    deps = [":test_lib"],
)
