load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_file", "js_library")
load("@better_rules_javascript//jest:rules.bzl", "jest_test")

cjs_root(
    name = "root",
    package_name = "@better-rules-javascript_test/jest-dep",
)

cjs_root(
    name = "other_root",
    package_name = "@better-rules-javascript_test/jest-other",
)

js_library(
    name = "lib",
    srcs = ["example.js"],
    root = ":other_root",
)

js_file(
    name = "jest_config",
    src = "jest.config.js",
    root = ":root",
)

js_library(
    name = "test_lib",
    srcs = ["example.spec.js"],
    root = ":root",
    deps = [":lib"],
)

jest_test(
    name = "test",
    config = ":jest_config",
    global_deps = [
        "@better_rules_javascript_npm_source_map_support0.5.21//:lib",
    ],
    jest = "@better_rules_javascript_npm//jest:lib",
    deps = [":test_lib"],
)
