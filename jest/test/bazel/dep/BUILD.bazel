load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_library")
load("@better_rules_javascript//jest:rules.bzl", "jest_test")

cjs_root(
    name = "root",
    package_name = "@better-rules-javascript-test/jest-dep",
    path = "root",
)

cjs_root(
    name = "other_root",
    package_name = "@better-rules-javascript-test/jest-other",
    path = "other_root",
)

js_library(
    name = "lib",
    srcs = ["example.js"],
    prefix = "other_root",
    root = ":other_root",
)

js_library(
    name = "jest_config",
    srcs = ["jest.config.js"],
    prefix = "root",
    root = ":root",
)

js_library(
    name = "test_lib",
    srcs = ["example.spec.js"],
    prefix = "root",
    root = ":root",
    deps = [":lib"],
)

jest_test(
    name = "test",
    config = "jest.config.js",
    config_dep = ":jest_config",
    global_deps = [
        "@npm_source-map-support_0.5.21//:lib",
        "@npm_babel_helper-compilation-targets_7.16.3//:lib",
        "@npm//jest-junit:lib",
    ],
    jest = "@npm//jest:lib",
    jest_haste_map = "@npm//jest-haste-map:lib",
    deps = [":test_lib"],
)
