load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_library")
load("@better_rules_javascript//rollup:rules.bzl", "rollup_bundle")

cjs_root(
    name = "root",
    package_name = "@better_rules_javascript_test/rollup-basic",
    descriptor = "package.json",
)

js_library(
    name = "lib",
    srcs = [
        "foo.js",
        "index.js",
    ],
    root = ":root",
)

js_library(
    name = "rollup_config",
    srcs = ["rollup.config.js"],
    root = ":root",
    deps = [
        "@better_rules_javascript_npm//rollup_plugin_commonjs:lib",
        "@better_rules_javascript_npm//rollup_plugin_node_resolve:lib",
    ],
)

rollup_bundle(
    name = "bundle",
    config_dep = ":rollup_config",
    config_path = "rollup.config.js",
    dep = ":lib",
    rollup = "//:rollup",
)
