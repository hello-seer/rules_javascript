load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_file", "js_library")
load("@better_rules_javascript//rollup:rules.bzl", "configure_rollup", "rollup_bundle")

cjs_root(
    name = "root",
    package_name = "@better-rules-javascript-test/rollup-basic",
    descriptors = ["package.json"],
)

js_library(
    name = "lib",
    srcs = [
        "foo.js",
        "index.js",
    ],
    root = ":root",
)

js_file(
    name = "rollup_config",
    src = "rollup.config.cjs",
    root = ":root",
    deps = [
        "@better_rules_javascript_npm//@rollup/plugin-commonjs:lib",
        "@better_rules_javascript_npm//@rollup/plugin-node-resolve:lib",
    ],
)

configure_rollup(
    name = "rollup",
    config = ":rollup_config",
    dep = "@better_rules_javascript_npm//rollup:lib",
)

rollup_bundle(
    name = "bundle",
    dep = ":lib",
    rollup = ":rollup",
)
