load("@better_rules_javascript//angular:rules.bzl", "angular_library")
load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_library")
load("@better_rules_javascript//typescript:rules.bzl", "ts_library")
load("@better_rules_javascript//webpack:rules.bzl", "configure_webpack", "webpack_bundle")

cjs_root(
    name = "root",
    package_name = "@better-rules-javascript-test/angular-material",
)

js_library(
    name = "tsconfig",
    srcs = ["tsconfig.json"],
    root = ":root",
)

angular_library(
    name = "lib",
    srcs = [
        "example.component.ts",
        "module.ts",
        "service.ts",
    ],
    compiler = "//:ngc",
    config = "tsconfig.json",
    config_dep = ":tsconfig",
    resources = ["example.component.html"],
    root = ":root",
    deps = [
        "@npm//@angular/common:lib",
        "@npm//@angular/material:lib",
        "@npm//@angular/platform-browser:lib",
        "@npm//@types/node:lib",
        "@npm//rxjs:lib",
    ],
)

ts_library(
    name = "main",
    srcs = [
        "main.dev.ts",
        "main.prod.ts",
    ],
    compiler = "//:tsc",
    config = "tsconfig.json",
    config_dep = ":tsconfig",
    root = ":root",
    deps = [
        ":lib",
        "@npm//@angular/compiler:lib",
        "@npm//@angular/platform-browser:lib",
        "@npm//@angular/platform-browser-dynamic:lib",
        "@npm//reflect-metadata:lib",
        "@npm//zone.js:lib",
    ],
)

js_library(
    name = "webpack_config",
    srcs = ["webpack.config.mjs"],
    root = ":root",
    deps = [
        "@npm//@angular-devkit/build-optimizer:lib",
        "@npm//@angular/compiler-cli:lib",
        "@npm//babel-loader:lib",
        "@npm//webpack:lib",
    ],
)

js_library(
    name = "html",
    srcs = ["index.html"],
    root = ":root",
)

configure_webpack(
    name = "webpack",
    cli = "@npm//webpack-cli:lib",
    config = "webpack.config.mjs",
    config_dep = ":webpack_config",
    dev_server = "@npm//webpack-dev-server:lib",
    webpack = "@npm//webpack:lib",
)

webpack_bundle(
    name = "bundle",
    dep = ":main",
    root = ":root",
    webpack = ":webpack",
)
