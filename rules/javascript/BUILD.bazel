load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("@better_rules_typescript//rules/typescript:rules.bzl", "ts_import")
load("//rules/javascript:rules.bzl", "js_library")

package(default_visibility = ["//visibility:public"])

exports_files(glob(["**/*.bzl"]))

bzl_library(
    name = "bzl",
    srcs = glob(["**/*.bzl"]),
    deps = [
        "//rules/util:bzl",
    ],
)

js_library(
    name = "resolver_js",
    srcs = glob(["resolver-js/**/*.js"]),
    js_name = "@better_rules_javascript/rules/javascript/resolver",
    strip_prefix = "better_rules_javascript/rules/javascript/resolver-js",
    deps = [
        "@better_rules_javascript_npm//tslib:js",
    ],
)

ts_import(
    name = "resolver",
    declarations = glob(["resolver-js/**/*.d.ts"]),
    js_name = "@better_rules_javascript/rules/javascript/resolver",
    strip_prefix = "better_rules_javascript/rules/javascript/resolver-js",
    deps = [
        ":resolver_js",
        "@better_rules_javascript_npm//tslib:js",
    ],
)
