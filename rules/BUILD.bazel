load("@better_rules_typescript//rules/protobuf:rules.bzl", "configure_ts_protoc")
load("@better_rules_typescript//rules/typescript:rules.bzl", "configure_ts_compiler")
load("//rules/commonjs:rules.bzl", "cjs_root")
load("//rules/rollup:rules.bzl", "configure_rollup")

package(default_visibility = ["//visibility:public"])

cjs_root(
    name = "bazel_root",
    package_name = "@bazel_tools",
    descriptor = "package.json",
)

configure_rollup(
    name = "rollup",
    dep = "@better_rules_javascript_npm//rollup:lib",
)

configure_ts_compiler(
    name = "tsc",
    ts = "@better_rules_javascript_npm//typescript:lib",
    tslib = "@better_rules_javascript_npm//tslib:lib",
)

configure_ts_protoc(
    name = "ts_protoc",
    compiler = ":tsc",
    root = ":bazel_root",
    ts_proto = "@better_rules_javascript_npm//ts_proto:lib",
    deps = [
        "@better_rules_javascript_npm//long:lib",
        "@better_rules_javascript_npm//protobufjs:lib",
        "@better_rules_javascript_npm//types_long:lib",
    ],
)
