load("@bazel_skylib//:bzl_library.bzl", "bzl_library")
load("@io_bazel_stardoc//stardoc:stardoc.bzl", "stardoc")

package(default_visibility = ["//visibility:public"])

bzl_library(
    name = "bzl",
    srcs = glob(["**/*.bzl"]),
)

filegroup(
    name = "doc",
    srcs = [":providers_doc"],
)

stardoc(
    name = "providers_doc",
    out = "providers.md",
    input = "providers.bzl",
)
