load("@better_rules_javascript//rules/javascript:rules.bzl", "js_library")
load("@better_rules_javascript//rules/nodejs:rules.bzl", "nodejs_binary")

js_library(
    name = "require",
    srcs = ["require.js"],
    deps = ["@npm//express:js"],
)

js_library(
    name = "js",
    srcs = ["index.js"],
    deps = ["@npm//express:js"],
)

nodejs_binary(
    name = "bin",
    dep = ":js",
)

nodejs_binary(
    name = "require_bin",
    dep = ":require",
    main = "require.js",
)
