load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//javascript:rules.bzl", "js_library")
load("@better_rules_javascript//nodejs:rules.bzl", "nodejs_simple_binary")
load("@better_rules_javascript//webpack:rules.bzl", "configure_webpack", "webpack_bundle")

cjs_root(
    name = "root",
    package_name = "@better_rules_javascript_test/webpack-basic",
    descriptors = ["package.json"],
)

js_library(
    name = "lib",
    srcs = [
        "lib.js",
        "main.js",
    ],
    root = ":root",
)

js_library(
    name = "webpack_config",
    srcs = ["webpack.config.js"],
    root = ":root",
)

configure_webpack(
    name = "webpack",
    config = "webpack.config.js",
    config_dep = ":webpack_config",
    dep = "@better_rules_javascript_npm//webpack_cli:lib",
)

webpack_bundle(
    name = "bundle",
    dep = ":lib",
    webpack = ":webpack",
)

nodejs_simple_binary(
    name = "bin",
    src = ":bundle",
)
