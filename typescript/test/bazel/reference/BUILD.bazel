load("@better_rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@better_rules_javascript//typescript:rules.bzl", "ts_library", "tsconfig")

cjs_root(
    name = "dep_root",
    package_name = "@better-rules-javascript-test/reference-dep",
    descriptors = ["package.json"],
    path = "dep",
)

cjs_root(
    name = "root",
    package_name = "@better-rules-javascript-test/reference-src",
    descriptors = ["package.json"],
    path = "src",
)

ts_library(
    name = "dep_lib",
    srcs = glob(["dep/**/*.ts"]),
    compiler = "//:ts",
    prefix = "dep",
    root = ":dep_root",
    strip_prefix = "dep",
)

ts_library(
    name = "lib",
    srcs = glob(["src/**/*.ts"]),
    compiler = "//:ts",
    config = ":tsconfig",
    prefix = "src",
    root = ":root",
    strip_prefix = "src",
    deps = [":dep_lib"],
)

tsconfig(
    name = "tsconfig",
    src = "tsconfig.json",
    root = ":root",
)
